<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="ownersTable"
        messagesPack="com.haulmont.sample.petclinic.web.owner.owner">
    <data readOnly="true">
        <collection id="ownersDc"
                    class="com.haulmont.sample.petclinic.entity.owner.Owner"
                    view="owner-with-pets">
            <loader id="ownersDl">
                <query>
                    <![CDATA[select e from petclinic_Owner e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="ownersTable"
            spacing="true">
        <filter id="filter"
                applyTo="ownersTable"
                dataLoader="ownersDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="ownersTable"
                    multiselect="true"
                    dataContainer="ownersDc"
                    width="100%">
            <actions>
                <action id="create" type="create"/>
                <action id="view" type="view" />
                <action id="excel" type="excel"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="firstName"/>
                <column id="lastName"/>
                <column id="address"/>
                <column id="city"/>
                <column id="telephone"/>
                <column id="email"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="ownersTable.create"/>
                <button id="viewBtn" action="ownersTable.view"/>
                <button id="excelBtn" action="ownersTable.excel" stylename="friendly"/>
                <button id="removeBtn" action="ownersTable.remove"  stylename="danger"/>
                <relatedEntities for="ownersTable" openType="DIALOG"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
