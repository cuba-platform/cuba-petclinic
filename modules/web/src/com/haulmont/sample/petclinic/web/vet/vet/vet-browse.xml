<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="vetsTable"
        messagesPack="com.haulmont.sample.petclinic.web.vet.vet">
    <data readOnly="true">
        <collection id="vetsDc"
                    class="com.haulmont.sample.petclinic.entity.vet.Vet"
                    view="vet-with-specialties">
            <loader id="vetsDl">
                <query>
                    <![CDATA[select e from petclinic_Vet e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="vetsTable"
            spacing="true">
        <filter id="filter"
                applyTo="vetsTable"
                dataLoader="vetsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="vetsTable"
                    dataContainer="vetsDc"
                    width="100%">
            <actions>
                <action id="create" type="create" openType="DIALOG"/>
                <action id="edit" type="edit" openType="DIALOG"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="firstName"/>
                <column id="lastName"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="vetsTable.create"/>
                <button id="editBtn" action="vetsTable.edit"/>
                <button id="removeBtn" action="vetsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
